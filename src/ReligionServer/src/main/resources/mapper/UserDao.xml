<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rss.ReligionServer.dao.UserDao">
    <insert id="create" parameterType="com.rss.ReligionServer.model.UserModel" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `religion`.`tb_user` (`co_email`, `co_password`, `co_name`, `co_number`, `co_birthday`, `co_kind`)
        VALUES (#{email}, #{password}, #{name}, #{number}, #{birthday}, #{kind});
    </insert>

    <select id="retrieveAll" resultType="com.rss.ReligionServer.model.UserModel">
        select * from tb_user;
    </select>

    <select id="retrieveByEmail" parameterType="String" resultType="com.rss.ReligionServer.model.UserModel">
        select * from tb_user where co_email = ${value};
    </select>

    <select id="retrieveById" resultType="com.rss.ReligionServer.model.UserModel">
        select * from tb_user where co_id= ${value};
    </select>

    <update id="update" parameterType="com.rss.ReligionServer.model.UserModel">
        UPDATE tb_user SET co_email = #{email}, co_password = #{password}, co_name = #{name}, co_number = #{number}, co_birthday = #{birthday}, co_kind = #{kind} WHERE (co_id = #{id});
    </update>
    
    <delete id="remove" parameterType="int">
        DELETE FROM tb_user WHERE `co_id`=${value};
    </delete>
</mapper>